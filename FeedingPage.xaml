<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PetFeedingTracker.FeedingPage">
    <StackLayout Padding="10">
        <Label Margin="0,0,0,30" Text="Добавить кормление" FontSize="Large" HorizontalOptions="Center" />
        <Button Margin="5" Text="Быстрое кормление" Command="{Binding QuickFeedingCommand}" />
        <Button Margin="5" Text="Выбрать время кормления" Command="{Binding ManualFeedingCommand}" />  
    </StackLayout>
</ContentPage>
